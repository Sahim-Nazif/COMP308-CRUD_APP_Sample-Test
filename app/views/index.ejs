<!DOCTYPE html>
<html lang="en">
<%- include('./partials/header.ejs') %>
<body>
    <div class="message">
        <%- include('./partials/messages.ejs') %>
    </div>
   <div class="container text-center mt-5 headtitle">

    <h4>A Simple CRUD Application</h4>
    <h6 class="mt-4">Using Express, Node JS and MongoDB</h6>
</div>

<div class="container backtohomepage">
 
    <p ><a href='/task/addtask' class="btn btn-warning addTaskBtn">Add Task</a></p>

</div>
<table class="table table-bordered table-stripped">
    <thead class="thead-dark">
        <tr>
            <th>Task Name</th>
            <th>Description</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Owner</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
   
            <% if (tasks.length >0) { %>
            <tr >
                <% tasks.forEach(task=> { %>
                    <td><%= task.taskName %></td>
                    <td><%= task.taskDescription %></td>
                    <td><%= task.startDate.toDateString() %></td>
                    <td><%= task.endDate.toDateString() %></td>
                    <td><%= task.owner %></td>
                  <td>
                        <a href="/task/update/<%= task._id %>" class="btn btn-primary text-white" ><i class="fas fa-edit"></i></a>
                      
                        <a href="/task/delete/<%= task._id %>" class="btn btn-danger text-white"><i class="fas fa-trash"></i></a>
                  </td>
             
                </tr>
               <% }) %>
               <%  } %>
          
    </tbody>
</table>
    
</body>
</html>